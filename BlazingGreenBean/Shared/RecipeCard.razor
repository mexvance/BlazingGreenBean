@using BlazingGreenBean.Models;

    <div class="w3-card w3-third">
        <img src=@Recipe.Picture alt="recipe picture" style={{"width": "100%"}}/>
        <h2 class="w3-container">@Recipe.Name</h2>
        <p class="w3-text-green w3-container">Percent Match @Recipe.PercentMatch</p>
        <p class="w3-container">Description @Recipe.Descr</p>
    </div>

@code {
    [Parameter]
    public Recipe Recipe { get; set; }
}
